
---
import Header from "../../components/Header.astro";
const response = await fetch("http://localhost:4321/api/posts.json");
const apps = await response.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Apps List</title>

    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 2rem;
        background: #f7f8fa;
      }

      h1 {
        margin-bottom: 1rem;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
      }

      .card {
        background: #fff;
        padding: 1rem;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: 0.2s ease;
      }

      .card:hover {
        transform: translateY(-4px);
      }

      .card img {
        width: 64px;
        height: 64px;
        border-radius: 10px;
        object-fit: cover;
      }

      .card h3 {
        margin: 0.5rem 0 0;
        font-size: 1.2rem;
      }

      .buttons {
        display: flex;
        gap: 0.6rem;
        margin-top: 0.5rem;
      }

      .edit-btn,
      .delete-btn {
        flex: 1;
        padding: 0.5rem;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-weight: bold;
      }

      .edit-btn {
        background: #3b82f6;
        color: white;
      }

      .delete-btn {
        background: #ef4444;
        color: white;
      }

      /* MODAL */
      .modal-overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.55);
        justify-content: center;
        align-items: center;
        z-index: 1000;
      }

      .modal {
        background: #fff;
        padding: 1.8rem;
        border-radius: 12px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
        animation: fadeIn 0.25s ease;
      }

      .modal img {
        width: 90px;
        height: 90px;
        border-radius: 14px;
        object-fit: cover;
      }

      .modal h2 {
        margin: 0.7rem 0 0;
      }

      .close-btn {
        margin-top: 1.2rem;
        width: 100%;
        padding: 0.7rem;
        background: #444;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: scale(0.9); }
        to { opacity: 1; transform: scale(1); }
      }
    </style>
  </head>

  <body>
        <Header />

    <h1>Apps List</h1>

    <div class="grid" id="grid">
      {apps.map((app) => (
        <div class="card" data-app={JSON.stringify(app)}>
          <img src={app.icon_url} alt={app.name} />
          <h3>{app.name}</h3>
          <p>{app.short_description || "No description"}</p>

          <div class="buttons" on:click|stopPropagation>
            <button class="edit-btn" data-id={app.id}>Edit</button>
            <button class="delete-btn" data-id={app.id}>Delete</button>
          </div>
        </div>
      ))}
    </div>

    <!-- Modal Preview -->
    <div id="modalOverlay" class="modal-overlay">
      <div class="modal">
        <img id="modalIcon" src="" />
        <h2 id="modalName"></h2>
        <p id="modalAuthor"></p>
        <p id="modalDesc"></p>
        <a id="modalLink" href="#" target="_blank">Open App Page</a>

        <button class="close-btn" id="closeModalBtn">Close</button>
      </div>
    </div>

    <script>
      // Get elements
      const grid = document.getElementById("grid");
      const overlay = document.getElementById("modalOverlay");
      const closeBtn = document.getElementById("closeModalBtn");

      const modalIcon = document.getElementById("modalIcon");
      const modalName = document.getElementById("modalName");
      const modalAuthor = document.getElementById("modalAuthor");
      const modalDesc = document.getElementById("modalDesc");
      const modalLink = document.getElementById("modalLink");

      // OPEN POPUP
      function openPopup(app) {
        modalIcon.src = app.icon_url;
        modalName.textContent = app.name;
        modalAuthor.textContent = "By: " + app.author;
        modalDesc.textContent = app.short_description || "No description";
        modalLink.href = app.app_url;

        overlay.style.display = "flex";
      }

      // CLOSE POPUP
      function closePopup() {
        overlay.style.display = "none";
      }

      closeBtn.addEventListener("click", closePopup);

      overlay.addEventListener("click", (e) => {
        if (e.target === overlay) closePopup();
      });

      // CLICK HANDLING
      grid.addEventListener("click", (e) => {
        const card = e.target.closest(".card");
        if (!card) return;

        const app = JSON.parse(card.dataset.app);

        // Edit button
        if (e.target.matches(".edit-btn")) {
          window.location.href = `/apps/${app.app_id}`;
          return;
        }

        // Delete button
        if (e.target.matches(".delete-btn")) {
          if (confirm("Delete this app?")) {
            fetch(`/api/delete/${app.id}`, { method: "DELETE" })
              .then(() => location.reload());
          }
          return;
        }

        // OPEN PREVIEW POPUP
        openPopup(app);
      });
    </script>
  </body>
</html>
